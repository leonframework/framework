<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="leon" verbose="2" parallel="false">

    <test name="testsThatRequireJettyAndFireFox" parallel="false" enabled="false">
        <packages>
            <package name="io.leon.web.browser.selenium.*"/>
        </packages>
    </test>

    <test name="testsThatRequireJettyAndHttpUnit" parallel="false">
        <packages>
            <package name="io.leon.web.browser.tagrewriters.*"/>
        </packages>
    </test>

    <test name="normal_tests" parallel="true">
        <groups>
            <run>
                <exclude name="nodefault"/>
            </run>
        </groups>
        <packages>
            <package name="io.leon.*"/>
        </packages>
    </test>

</suite>
