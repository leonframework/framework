     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-app_3.0.xsd">

    <filter>
        <filter-name>sjsFilter</filter-name>
        <filter-class>com.ww.sjs.SJSFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>module</param-name>
            <param-value>com.ww.sjs.person.Config</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>sjsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


