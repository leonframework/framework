        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>AtmosphereServlet</servlet-name>
        <url-pattern>/atmosphere</url-pattern>
    </servlet-mapping>
    -->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>

